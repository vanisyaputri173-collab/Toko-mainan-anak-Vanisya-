  <script>
    const products = [
      { id: 1, name: "Mobil Aki Anak", price: 850000, image: "https://cdn.pixabay.com/photo/2016/11/29/10/07/toy-car-1869616_1280.jpg" },
      { id: 2, name: "Boneka Teddy Bear", price: 120000, image: "https://cdn.pixabay.com/photo/2016/11/29/05/14/bear-1867590_1280.jpg" },
      { id: 3, name: "Robot Mainan", price: 150000, image: "https://cdn.pixabay.com/photo/2015/02/02/11/09/robot-620822_1280.jpg" },
      { id: 4, name: "Balok Susun", price: 90000, image: "https://cdn.pixabay.com/photo/2016/03/27/19/31/toys-1284129_1280.jpg" },
      { id: 5, name: "Pesawat Mainan", price: 110000, image: "https://cdn.pixabay.com/photo/2016/11/29/03/53/plane-1866944_1280.jpg" }
    ];

    const productList = document.getElementById("product-list");
    const cartCount = document.getElementById("cart-count");
    const cartItems = document.getElementById("items");
    const totalPrice = document.getElementById("total");

    let cart = [];

    function displayProducts() {
      products.forEach(p => {
        const div = document.createElement("div");
        div.className = "product";
        div.innerHTML = `
          <img src="${p.image}" alt="${p.name}">
          <h3>${p.name}</h3>
          <p>Rp ${p.price.toLocaleString()}</p>
          <button onclick="addToCart(${p.id})">Tambah ke Keranjang</button>
        `;
        productList.appendChild(div);
      });
    }

    function addToCart(id) {
      const product = products.find(p => p.id === id);
      cart.push(product);
      updateCart();
    }

    function updateCart() {
      cartCount.textContent = cart.length;
      cartItems.innerHTML = "";
      let total = 0;
      cart.forEach(item => {
        const div = document.createElement("div");
        div.className = "cart-item";
        div.textContent = `${item.name} - Rp ${item.price.toLocaleString()}`;
        cartItems.appendChild(div);
        total += item.price;
      });
      totalPrice.textContent = total.toLocaleString();
    }

    function toggleCart() {
      const panel = document.getElementById("cart-items");
      panel.style.display = (panel.style.display === "block") ? "none" : "block";
    }

    function checkout() {
      const nama = document.getElementById("nama").value;
      const alamat = document.getElementById("alamat").value;
      const hp = document.getElementById("hp").value;
      if (!nama || !alamat || !hp) {
        alert("Harap isi semua data pembeli terlebih dahulu!");
        return;
      }
      if (cart.length === 0) {
        alert("Keranjang masih kosong!");
        return;
      }

      let pesan = `üßæ Pesanan Baru dari ${nama}\nüìç Alamat: ${alamat}\nüìû HP: ${hp}\n\nBarang:\n`;
      let total = 0;
      cart.forEach(item => {
        pesan += `- ${item.name} (Rp ${item.price.toLocaleString()})\n`;
        total += item.price;
      });
      pesan += `\nüí∞ Total: Rp ${total.toLocaleString()}\n\nTerima kasih telah berbelanja di Toko Mainan Anak Ceria! üß∏`;

      alert(pesan);
    }

    displayProducts();
  </script>

